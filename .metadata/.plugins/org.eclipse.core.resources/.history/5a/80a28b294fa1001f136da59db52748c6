package tema3FJRJ;

import java.util.Iterator;
import java.util.Scanner;

public class Repaso {

	public static void main(String[] args) {

		Scanner sca = new Scanner(System.in);
		
		System.out.println("Dime un numero base para la potencia");
		double base = sca.nextDouble();
		
		System.out.println("Dame un numero exponente");
		int exponente = sca.nextInt();
		double numero = 1.0;
		
		for (int i = exponente; i > 0; i++) {
			numero = base *i;
		}
		System.out.println(numero);

	}

}
