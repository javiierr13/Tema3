package tema3FJRJ;

public class Repaso {

	public static void main(String[] args) {

		int pagoMensual = 10;
		int dineroFinal = 0;
		for (int i = 0; i < 20; i++) {
			System.out.printf("El mes %d debera pagar %d \n", i+1, pagoMensual);
			dineroFinal = dineroFinal + pagoMensual;
			pagoMensual *=2;
		}
		System.out.printf("En total pagara %d \n", dineroFinal);
	}
}

